generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Domain {
  id            String            @id
  normalizedUrl String            @unique
  isActive      Boolean           @default(false)
  statusCode    Int?
  lastCheckedAt DateTime?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  dataPoints    DomainDataPoint[]
  urlInputs     UrlInput[]
  scans         WebsiteScan[]

  // Manual investigation fields
  isManuallyRisky    Boolean             @default(false)
  manualRiskNote     String?
  manualRiskSetAt    DateTime?
  investigationNotes InvestigationNote[]

  @@index([normalizedUrl])
  @@index([isManuallyRisky])
  @@index([lastCheckedAt(sort: Desc)]) // For pagination queries
}

model InvestigationNote {
  id           String   @id @default(cuid())
  domainId     String
  content      String   @db.Text
  type         String   @default("note") // "note" or "review"
  riskDecision String?  // "risky" or "not_risky" - only for review type
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  domain       Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)

  @@index([domainId])
  @@index([createdAt])
  @@index([type])
}

model UrlInput {
  id        String   @id @default(cuid())
  rawInput  String
  domainId  String
  source    String   @default("search")
  createdAt DateTime @default(now())
  domain    Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)

  @@index([domainId])
  @@index([rawInput])
  @@index([createdAt])
}

model WebsiteScan {
  id             String          @id @default(cuid())
  domainId       String
  url            String
  isActive       Boolean         @default(false)
  statusCode     Int?
  checkedAt      DateTime
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  error          String?
  status         String          @default("pending")
  crawlFetchLogs CrawlFetchLog[]
  homepageSkus   HomepageSku[]
  policyLinks    PolicyLink[]
  artifacts      ScanArtifact[]
  dataPoints     ScanDataPoint[]
  signalLogs     SignalLog[]
  domain         Domain          @relation(fields: [domainId], references: [id], onDelete: Cascade)

  @@index([domainId])
  @@index([url])
  @@index([checkedAt])
  @@index([status])
  @@index([domainId, status, createdAt(sort: Desc)]) // For filtered scan queries
}

model DomainDataPoint {
  id                String   @id @default(cuid())
  domainId          String
  key               String
  label             String
  value             String
  sources           String
  rawOpenAIResponse String
  extractedAt       DateTime @default(now())
  updatedAt         DateTime @updatedAt
  domain            Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)

  @@unique([domainId, key])
  @@index([domainId])
  @@index([key])
}

model ScanDataPoint {
  id                String      @id @default(cuid())
  scanId            String
  key               String
  label             String
  value             String
  sources           String
  rawOpenAIResponse String
  extractedAt       DateTime    @default(now())
  scan              WebsiteScan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@index([scanId])
  @@index([key])
  @@index([scanId, key]) // Composite index for data point lookups
}

model CrawlFetchLog {
  id              String      @id @default(cuid())
  scanId          String
  url             String
  method          String      @default("GET")
  statusCode      Int?
  contentType     String?
  contentLength   Int?
  fetchDurationMs Int?
  errorMessage    String?
  robotsAllowed   Boolean     @default(true)
  source          String
  createdAt       DateTime    @default(now())
  allowedByPolicy Boolean     @default(true)
  blockedReason   String?
  discoveredBy    String?
  latencyMs       Int?
  ok              Boolean     @default(false)
  scan            WebsiteScan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@index([scanId])
  @@index([url])
  @@index([createdAt])
  @@index([scanId, statusCode]) // For active status check queries
}

model UserPreference {
  id        String   @id @default(cuid())
  userId    String   @default("default")
  key       String
  value     String
  updatedAt DateTime @updatedAt

  @@unique([userId, key])
  @@index([userId])
}

model SignalLog {
  id           String      @id @default(cuid())
  scanId       String
  category     String
  name         String
  valueType    String
  valueNumber  Float?
  valueString  String?
  valueBoolean Boolean?
  valueJson    String?
  severity     String      @default("info")
  evidenceUrl  String?
  notes        String?
  createdAt    DateTime    @default(now())
  scan         WebsiteScan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@index([scanId])
  @@index([category])
  @@index([name])
  @@index([severity])
  @@index([createdAt])
}

model ScanArtifact {
  id          String      @id @default(cuid())
  scanId      String
  url         String
  type        String
  sha256      String
  snippet     String
  contentType String?
  fetchedAt   DateTime    @default(now())
  scan        WebsiteScan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@unique([scanId, type])
  @@index([scanId])
  @@index([sha256])
}

model HomepageSku {
  id                String      @id @default(cuid())
  scanId            String
  sourceUrl         String
  productUrl        String
  productPath       String?
  title             String?
  priceText         String?
  currency          String?
  amount            Float?
  imageUrl          String?
  extractionMethod  String
  confidence        Int
  createdAt         DateTime    @default(now())
  isOnSale          Boolean     @default(false)
  originalAmount    Float?
  originalPriceText String?
  scan              WebsiteScan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@unique([scanId, productUrl])
  @@index([scanId])
  @@index([productUrl])
  @@index([confidence])
}

model PolicyLink {
  id                String      @id @default(cuid())
  scanId            String
  policyType        String
  url               String
  discoveredOn      String
  discoveryMethod   String
  verifiedOk        Boolean     @default(false)
  statusCode        Int?
  contentType       String?
  verificationNotes String?
  titleSnippet      String?
  lastCheckedAt     DateTime    @default(now())
  createdAt         DateTime    @default(now())
  scan              WebsiteScan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@unique([scanId, policyType])
  @@index([scanId])
  @@index([url])
}

// =============================================================================
// Homepage Similarity Compare Models
// =============================================================================

model HomepageArtifact {
  id            String   @id @default(cuid())
  url           String // input URL
  finalUrl      String? // URL after redirects
  domain        String
  fetchMethod   String   @default("http") // "http" for MVP
  statusCode    Int?
  contentType   String?
  ok            Boolean  @default(false)
  redirectChain String?  @db.Text // JSON string[]
  latencyMs     Int?
  bytes         Int?
  htmlSha256    String?
  textSha256    String?
  htmlSnippet   String?  @db.Text // truncated ~100KB
  textSnippet   String?  @db.Text // truncated ~16KB
  features      String?  @db.Text // JSON: extracted features
  embedding     String?  @db.Text // JSON: embedding vector
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  comparisonsA HomepageComparison[] @relation("ArtifactA")
  comparisonsB HomepageComparison[] @relation("ArtifactB")

  @@index([domain])
  @@index([url])
  @@index([htmlSha256])
}

model HomepageComparison {
  id           String   @id @default(cuid())
  urlA         String
  urlB         String
  artifactAId  String
  artifactBId  String
  overallScore Int // 0-100
  textScore    Int // 0-100
  domScore     Int // 0-100
  confidence   Int // 0-100
  reasons      String?  @db.Text // JSON string[]
  featureDiff  String?  @db.Text // JSON: stats/deltas for UI
  createdAt    DateTime @default(now())

  artifactA HomepageArtifact @relation("ArtifactA", fields: [artifactAId], references: [id], onDelete: Cascade)
  artifactB HomepageArtifact @relation("ArtifactB", fields: [artifactBId], references: [id], onDelete: Cascade)

  @@index([urlA])
  @@index([urlB])
}
