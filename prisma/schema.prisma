generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Domain {
  id            String            @id
  normalizedUrl String            @unique
  isActive      Boolean           @default(false)
  statusCode    Int?
  lastCheckedAt DateTime?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  dataPoints    DomainDataPoint[]
  urlInputs     UrlInput[]
  scans         WebsiteScan[]

  @@index([normalizedUrl])
}

model UrlInput {
  id        String   @id @default(cuid())
  rawInput  String
  domainId  String
  source    String   @default("search")
  createdAt DateTime @default(now())
  domain    Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)

  @@index([domainId])
  @@index([rawInput])
  @@index([createdAt])
}

model WebsiteScan {
  id             String          @id @default(cuid())
  domainId       String
  url            String
  isActive       Boolean         @default(false)
  statusCode     Int?
  checkedAt      DateTime
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  error          String?
  status         String          @default("pending")
  crawlFetchLogs CrawlFetchLog[]
  homepageSkus   HomepageSku[]
  policyLinks    PolicyLink[]
  artifacts      ScanArtifact[]
  dataPoints     ScanDataPoint[]
  signalLogs     SignalLog[]
  domain         Domain          @relation(fields: [domainId], references: [id], onDelete: Cascade)

  @@index([domainId])
  @@index([url])
  @@index([checkedAt])
  @@index([status])
}

model DomainDataPoint {
  id                String   @id @default(cuid())
  domainId          String
  key               String
  label             String
  value             String
  sources           String
  rawOpenAIResponse String
  extractedAt       DateTime @default(now())
  updatedAt         DateTime @updatedAt
  domain            Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)

  @@unique([domainId, key])
  @@index([domainId])
  @@index([key])
}

model ScanDataPoint {
  id                String      @id @default(cuid())
  scanId            String
  key               String
  label             String
  value             String
  sources           String
  rawOpenAIResponse String
  extractedAt       DateTime    @default(now())
  scan              WebsiteScan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@index([scanId])
  @@index([key])
}

model AuthorizedDomain {
  id              String   @id @default(cuid())
  domain          String   @unique
  allowSubdomains Boolean  @default(true)
  respectRobots   Boolean  @default(true)
  maxPagesPerScan Int      @default(50)
  crawlDelayMs    Int      @default(1000)
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([domain])
}

model CrawlFetchLog {
  id              String      @id @default(cuid())
  scanId          String
  url             String
  method          String      @default("GET")
  statusCode      Int?
  contentType     String?
  contentLength   Int?
  fetchDurationMs Int?
  errorMessage    String?
  robotsAllowed   Boolean     @default(true)
  source          String
  createdAt       DateTime    @default(now())
  allowedByPolicy Boolean     @default(true)
  blockedReason   String?
  discoveredBy    String?
  latencyMs       Int?
  ok              Boolean     @default(false)
  scan            WebsiteScan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@index([scanId])
  @@index([url])
  @@index([createdAt])
}

model UserPreference {
  id        String   @id @default(cuid())
  userId    String   @default("default")
  key       String
  value     String
  updatedAt DateTime @updatedAt

  @@unique([userId, key])
  @@index([userId])
}

model SignalLog {
  id           String      @id @default(cuid())
  scanId       String
  category     String
  name         String
  valueType    String
  valueNumber  Float?
  valueString  String?
  valueBoolean Boolean?
  valueJson    String?
  severity     String      @default("info")
  evidenceUrl  String?
  notes        String?
  createdAt    DateTime    @default(now())
  scan         WebsiteScan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@index([scanId])
  @@index([category])
  @@index([name])
  @@index([severity])
  @@index([createdAt])
}

model ScanArtifact {
  id          String      @id @default(cuid())
  scanId      String
  url         String
  type        String
  sha256      String
  snippet     String
  contentType String?
  fetchedAt   DateTime    @default(now())
  scan        WebsiteScan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@unique([scanId, type])
  @@index([scanId])
  @@index([sha256])
}

model HomepageSku {
  id                String      @id @default(cuid())
  scanId            String
  sourceUrl         String
  productUrl        String
  productPath       String?
  title             String?
  priceText         String?
  currency          String?
  amount            Float?
  imageUrl          String?
  extractionMethod  String
  confidence        Int
  createdAt         DateTime    @default(now())
  isOnSale          Boolean     @default(false)
  originalAmount    Float?
  originalPriceText String?
  scan              WebsiteScan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@unique([scanId, productUrl])
  @@index([scanId])
  @@index([productUrl])
  @@index([confidence])
}

model PolicyLink {
  id                String      @id @default(cuid())
  scanId            String
  policyType        String
  url               String
  discoveredOn      String
  discoveryMethod   String
  verifiedOk        Boolean     @default(false)
  statusCode        Int?
  contentType       String?
  verificationNotes String?
  titleSnippet      String?
  lastCheckedAt     DateTime    @default(now())
  createdAt         DateTime    @default(now())
  scan              WebsiteScan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@unique([scanId, policyType])
  @@index([scanId])
  @@index([url])
}
